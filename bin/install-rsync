#!/bin/bash -e

if [[ $# -eq 2 ]]
then
    CONTENT=$1
    TARGET=$2
else
    echo usage: $0 content target
    exit 1
fi

if [ ! -d "${CONTENT}" ]
then
    echo error: content path must be directory
    exit 1
fi

if [ ! -d "${TARGET}" ]
then
    echo error: target path must be directory
    exit 1
fi

rsync -avP "${CONTENT}/" "${TARGET}"
